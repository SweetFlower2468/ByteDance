<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_background"
    android:padding="16dp">

    <!-- 1. Header -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:src="@drawable/ic_arrow_left"
        app:tint="@color/text_primary"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="模型管理"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="管理你的本地 Llama 模型"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <!-- 2. Storage Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/surface_card"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/divider"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Top Row -->
            <ImageView
                android:id="@+id/iv_storage_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_file_other" 
                app:tint="@color/brand_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="本地存储"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/iv_storage_icon"
                app:layout_constraintStart_toEndOf="@id/iv_storage_icon"
                app:layout_constraintTop_toTopOf="@id/iv_storage_icon"/>

            <TextView
                android:id="@+id/tv_storage_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.0 GB / 64 GB"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_storage_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_storage_icon"/>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/pb_storage"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="16dp"
                android:progress="12"
                android:progressTint="@color/brand_primary"
                app:layout_constraintTop_toBottomOf="@id/iv_storage_icon"/>
                <!-- Note: native progressTint might need min SDK 21, which is fine. 
                     If bg_input_bar is not suitable, default style is usually fine or use a custom drawable.
                     I'll stick to default style but set tint. -->

            <!-- Bottom Row -->
            <TextView
                android:id="@+id/tv_model_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="2 个已下载模型"
                            android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pb_storage"/>

            <TextView
                android:id="@+id/tv_free_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="57.0 GB 可用"
                            android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pb_storage"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

    <!-- 3. Search & Filter -->
            <LinearLayout
        android:id="@+id/layout_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/card_storage">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_model_manager_search_input"
                    android:drawableStart="@drawable/ic_search"
            android:drawablePadding="12dp"
            android:drawableTint="@color/text_tertiary"
                    android:hint="搜索模型..."
            android:paddingHorizontal="16dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_tertiary"
                    android:textSize="14sp" />

            </LinearLayout>

    <!-- 4. RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_models"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_search"
        tools:listitem="@layout/item_model_card" />

    <!-- 5. FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/total_black"
        android:contentDescription="Import Model"
        android:src="@drawable/ic_add_circle"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
