<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_deep_think_container"
    android:padding="@dimen/spacing_s">

    <ImageView
        android:id="@+id/iv_dt_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_bulb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_secondary" />

    <TextView
        android:id="@+id/tv_dt_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="深度思考中"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_small"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_dt_icon"
        app:layout_constraintEnd_toStartOf="@id/iv_dt_arrow"
        app:layout_constraintStart_toEndOf="@id/iv_dt_icon"
        app:layout_constraintTop_toTopOf="@id/iv_dt_icon" />

    <ImageView
        android:id="@+id/iv_dt_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:rotation="0"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_secondary" />

    <TextView
        android:id="@+id/tv_dt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/iv_dt_icon"
        tools:text="1. User asks for Java code.\n2. Need to implement bubble sort.\n3. Writing complexity analysis..."
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_dt_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="耗时 2.3s"
        android:textColor="@color/text_tertiary"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dt_content"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
