<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_input_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface_card"
    android:elevation="8dp"
    android:paddingTop="8dp">

    <!-- 1. 引用预览容器 -->
    <LinearLayout
        android:id="@+id/layout_preview_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        app:layout_constraintBottom_toTopOf="@id/input_wrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include
            android:id="@+id/view_quote_text"
            layout="@layout/view_quote_text_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <include
            android:id="@+id/view_quote_file"
            layout="@layout/view_quote_file_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

    <!--
       2. 输入框容器
       使用 ConstraintLayout 确保内部元素垂直居中
    -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_input_field"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@id/action_panel"
        app:layout_constraintEnd_toStartOf="@id/btn_send"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 左侧功能按钮 (垂直居中) -->
        <ImageButton
            android:id="@+id/btn_more_features"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="更多"
            android:scaleType="centerInside"
            android:src="@drawable/selector_brain_toggle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/text_secondary" />

        <!-- 输入框 (垂直居中) -->
        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="发消息..."
            android:maxHeight="120dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_tertiary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_more_features"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--
        3. 发送/展开 按钮
        【关键修改】app:layout_constraintBottom_toBottomOf="@id/input_wrapper"
        让按钮的底部始终与输入框的底部对齐，视觉上更整齐
    -->
    <ImageButton
        android:id="@+id/btn_send"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="操作"
        android:scaleType="centerInside"
        android:src="@drawable/ic_add_circle"
        app:layout_constraintBottom_toBottomOf="@id/input_wrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@null" />

    <!-- 4. 底部功能面板 (隐藏区) -->
    <include
        android:id="@+id/action_panel"
        layout="@layout/view_chat_action_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>