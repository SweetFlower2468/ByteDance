<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_model"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/surface_card"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@android:color/transparent"
    app:strokeWidth="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- A. Header -->
        <TextView
            android:id="@+id/tv_model_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Llama 3.2"
            android:textColor="@color/total_black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_brain"
            android:layout_marginEnd="4dp"/>

        <ImageView
            android:id="@+id/iv_brain"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_brain_blue"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tv_model_name"
            app:layout_constraintTop_toTopOf="@id/tv_model_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_model_name"
            app:layout_constraintEnd_toStartOf="@id/tv_status_active"
            tools:visibility="visible"/>

        <!-- Status Badge (Active) -->
        <TextView
            android:id="@+id/tv_status_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/bg_model_card_status_active"
            android:backgroundTint="#E8F5E9"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="使用中"
            android:textColor="#2E7D32"
            android:textSize="10sp"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_model_name"
            app:layout_constraintStart_toEndOf="@id/iv_brain"
            app:layout_constraintTop_toTopOf="@id/tv_model_name"
            app:layout_constraintEnd_toStartOf="@id/layout_top_actions"
            tools:visibility="visible" />
            
        <!-- Actions Container (Top Right) -->
        <LinearLayout
            android:id="@+id/layout_top_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_model_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_model_name">

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_settings"
                app:tint="@color/text_secondary" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="6dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_trash_red"
                app:tint="@color/error"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <!-- B. Description (Version) -->
        <TextView
            android:id="@+id/tv_model_version"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="3B-Instruct"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/layout_top_actions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_model_name" />

        <!-- C. Metadata Row -->
        <LinearLayout
            android:id="@+id/layout_metadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_model_version"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Params -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_memory"
                    app:tint="@color/text_tertiary"/>
                <TextView
                    android:id="@+id/tv_meta_params"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="3B"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>
            </LinearLayout>

            <Space android:layout_width="16dp" android:layout_height="wrap_content"/>

            <!-- Size -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_file_other"
                    app:tint="@color/text_tertiary"/>
                <TextView
                    android:id="@+id/tv_meta_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="2.1 GB"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>
            </LinearLayout>

            <Space android:layout_width="16dp" android:layout_height="wrap_content"/>

            <!-- Quantization -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_timer"
                    app:tint="@color/text_tertiary"/>
                <TextView
                    android:id="@+id/tv_meta_quant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Q4_K_M"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- D. Action Area -->
        <FrameLayout
            android:id="@+id/container_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/layout_metadata">

            <!-- 1. Not Downloaded: Download Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_download"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="@color/total_black"
                android:text="下载模型"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_download"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white"
                app:cornerRadius="8dp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <!-- 2. Downloading -->
            <LinearLayout
                android:id="@+id/layout_downloading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_bar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:trackCornerRadius="4dp"
                        app:indicatorColor="@color/brand_primary"
                        android:progress="65"/>

                    <TextView
                        android:id="@+id/tv_progress_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="65%"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_pause"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/brand_primary"
                    android:text="暂停下载"
                    android:textColor="@android:color/white"
                    app:icon="@drawable/ic_pause"
                    app:iconGravity="textStart"
                    app:iconTint="@android:color/white"
                    app:cornerRadius="8dp"/>
            </LinearLayout>

            <!-- 3. Ready / Active -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_ready"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="gone">

                <TextView
                    android:id="@+id/tv_last_used"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最后使用：刚刚"
                    android:textColor="@color/text_tertiary"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_check"
                        app:tint="#2E7D32"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="已就绪"
                        android:textColor="#2E7D32"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
