<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="16dp">

    <!-- 1. Avatar -->
    <ImageView
        android:id="@+id/iv_session_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_circle_blue"
        android:backgroundTint="#E3F2FD"
        android:padding="10dp"
        android:src="@drawable/ic_brain_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 2. Title -->
    <TextView
        android:id="@+id/tv_session_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_last_message"
        app:layout_constraintEnd_toStartOf="@id/tv_time"
        app:layout_constraintStart_toEndOf="@id/iv_session_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_session_avatar"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="关于 Java 冒泡排序的讨论" />

    <!-- 3. Preview Message -->
    <TextView
        android:id="@+id/tv_last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_session_avatar"
        app:layout_constraintEnd_toStartOf="@id/tv_token_badge"
        app:layout_constraintStart_toEndOf="@id/iv_session_avatar"
        app:layout_constraintTop_toBottomOf="@id/tv_session_title"
        tools:text="好的，以下是冒泡排序的优化版本代码..." />

    <!-- 4. Timestamp -->
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_tertiary"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_session_title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="10:30" />

    <!-- 5. Token Badge -->
    <TextView
        android:id="@+id/tv_token_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_quote_pill"
        android:backgroundTint="#F5F5F5"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:textColor="@color/text_tertiary"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_last_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_last_message"
        tools:text="1.2k tokens" />

</androidx.constraintlayout.widget.ConstraintLayout>
