<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 开启状态 -->
    <item android:state_selected="true" android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@android:color/transparent"/>
                    <stroke android:width="1dp" android:color="@color/medium_dark_blue" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_brain_blue" android:bottom="8dp" android:top="8dp" android:left="8dp" android:right="8dp"/>
        </layer-list>
    </item>

    <!-- 默认/关闭状态 -->
    <item>
        <layer-list>
            <item>
                <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="oval">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1dp" android:color="@color/divider" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_brain_gray" android:bottom="8dp" android:top="8dp" android:left="8dp" android:right="8dp"/>
        </layer-list>
    </item>
</selector>
