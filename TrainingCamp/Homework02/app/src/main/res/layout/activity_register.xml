<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- 1. 标题区域 -->
    <TextView
        android:id="@+id/reg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="创建账号"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reg_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="欢迎加入，请填写以下信息完成注册"
        android:textColor="#757575"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_title" />

    <!-- 2. 邮箱输入框 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/reg_email_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:boxBackgroundColor="#F5F5F5"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintEnabled="false"
        app:startIconDrawable="@drawable/email_icon"
        app:startIconTint="#555555"
        app:layout_constraintTop_toBottomOf="@+id/reg_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reg_email"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="请输入邮箱"
            android:inputType="textEmailAddress"
            android:textColor="#333333"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 3. 密码输入框 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/reg_pwd_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:boxBackgroundColor="#F5F5F5"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintEnabled="false"
        app:startIconDrawable="@drawable/lock_icon"
        app:startIconTint="#555555"
        app:endIconMode="password_toggle"
        app:endIconTint="#555555"
        app:layout_constraintTop_toBottomOf="@+id/reg_email_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reg_pwd"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="设置密码"
            android:inputType="textPassword"
            android:textColor="#333333"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 4. 验证码区域 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/reg_captcha_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        app:boxBackgroundColor="#F5F5F5"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintEnabled="false"
        app:startIconDrawable="@drawable/lock_icon"
        app:startIconTint="#555555"
        app:layout_constraintTop_toBottomOf="@+id/reg_pwd_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reg_captcha_btn">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reg_captcha"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="验证码"
            android:inputType="text"
            android:textColor="#333333"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 右侧按钮 -->
    <Button
        android:id="@+id/reg_captcha_btn"
        android:layout_width="110dp"
        android:layout_height="56dp"
        android:text="获取"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#067EFD"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/reg_captcha_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/reg_captcha_layout" />

    <!-- 5. 立即注册按钮 -->
    <Button
        android:id="@+id/register_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:text="立即注册"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#067EFD"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@+id/reg_captcha_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>